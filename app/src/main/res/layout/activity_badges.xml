                    />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/badge"
                    />

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

